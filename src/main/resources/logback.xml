<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
<!--     <file>/srv/tomcat7_infolis/logs/infolis.log</file> -->
    <file>/tmp/infolis.log</file>

    <encoder>
      <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
<!--       <pattern>%msg%n</pattern> -->
    </encoder>
  </appender>

  <appender name="LOGGLY" class="ch.qos.logback.ext.loggly.LogglyAppender">
      <endpointUrl>http://logs-01.loggly.com/inputs/0a25d1c1-9097-4218-90b4-3021476d1728/tag/logback</endpointUrl>
      <pattern>%d{"ISO8601", UTC}  %p %t %c{0}.%M - %m%n</pattern>
  </appender>

  <logger name="io.github.infolis.algorithm.TextExtractorAlgorithm" level="debug"/>
  <logger name="io.github.infolis.algorithm.BaseAlgorithm" level="info"/>

  <root level="debug">
    <appender-ref ref="FILE" />
    <appender-ref ref="STDOUT" />
    <appender-ref ref="LOGGLY" />
  </root>
</configuration>
